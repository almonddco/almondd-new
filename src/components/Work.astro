---
import { Picture } from "astro:assets";

const images = [
  "/works/1.png",
  "/works/2.png",
  "/works/3.png",
  "/works/4.png",
  "/works/5.png",
  "/works/6.png",
  "/works/7.png",
  "/works/9.png",
  "/works/10.png",
];
---

<section id="works" class="space-y-20 ">
    <h1 class="text-2xl md:text-6xl text-center font-semibold text-white py-5 ">Our Works</h1>
    <div class="bg-black">
      <div class="mx-auto max-w-2xl px-4 py-4 md:py-16 lg:max-w-7xl lg:px-8">
    
        <div class="grid grid-cols-2 md:grid-cols-3 gap-8">

       {
        images.map((image)=>(
            <a href="#" class="group ">
            <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
              <Picture src={image} formats={['webp']} width={100} height={200}  alt="Tall slender porcelain bottle with natural clay textured body and cork stopper." class="h-full w-full object-cover object-center group-hover:opacity-75" >
            </div>
           </a>
          
        ))
       }
        </div>
      </div>
    </div>
  </section>


